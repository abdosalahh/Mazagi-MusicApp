<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ECECEC"
    >




       <RelativeLayout
           android:id="@+id/optionParent"
           android:layout_width="match_parent"
           android:layout_height="75dp"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="30dp"
           android:layout_marginRight="5dp"
           android:layout_marginBottom="10dp">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="60dp"
               android:layout_marginRight="20dp"

               >

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/bg_menu"
                   app:tint="#77000000"
                   android:alpha="0.3"/>

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginRight="3dp"
                   android:layout_marginBottom="3dp"
                   android:elevation="50dp"
                   android:src="@drawable/bg_menu" />


           </RelativeLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginBottom="3dp"
               android:layout_marginRight="3dp"/>


           <RelativeLayout
               android:layout_marginLeft="25dp"
               android:layout_width="75dp"
               android:layout_height="match_parent">



               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/bg_right"
                   app:tint="#77000000"
                   android:alpha="0.3"/>

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="0.5dp"
                   android:layout_marginBottom="2dp"
                   android:layout_marginRight="6dp"
                   android:src="@drawable/bg_right"/>


               <ImageView
                   android:id="@+id/optionImage"
                   android:layout_width="120dp"
                   android:layout_height="match_parent"
                   android:padding="10dp"
                   android:src="@drawable/ic_ofline_songs" />
           </RelativeLayout>


           <RelativeLayout
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"

               >
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/bg_right"
                   app:tint="#77000000"
                   android:alpha="0.3"

                   />
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginBottom="5dp"
                   android:layout_marginLeft="1dp"
                   android:layout_marginRight="1dp"
                   android:src="@drawable/bg_right"


                   />
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/ic_arrow"
                   android:padding="10dp"

                   />
           </RelativeLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_marginLeft="110dp">


               <TextView
                   android:id="@+id/optionName"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:text="Your Device"
                   android:gravity="bottom"
                   android:layout_weight="1"
                   android:textColor="@color/black"
                   android:paddingBottom="5dp"
                   android:fontFamily="@font/optios_font"
                   android:textSize="30dp"
                   android:layout_marginBottom="15dp"


                   />


           </LinearLayout>

       </RelativeLayout>


</RelativeLayout>

